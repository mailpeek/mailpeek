{
  "name": "@mailpeek/components",
  "version": "0.1.0",
  "description": "Vue 3 email components with SSR render-to-HTML pipeline",
  "license": "MIT",
  "author": "Aoife Shannon",
  "homepage": "https://mailpeek.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/mailpeek/mailpeek",
    "directory": "packages/components"
  },
  "keywords": [
    "vue",
    "vue3",
    "email",
    "email-components",
    "html-email",
    "ssr",
    "render",
    "template"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && vue-tsc -p tsconfig.build.json --declaration --emitDeclarationOnly --declarationDir dist --noEmit false",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "vue-tsc --noEmit"
  },
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "dependencies": {
    "@mailpeek/preview": "workspace:*"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.0",
    "jsdom": "^28.1.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.0",
    "vue": "^3.5.0",
    "vue-tsc": "^2.0.0"
  }
}
